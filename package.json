{
  "name": "cage-clock",
  "displayName": "CageClock - Focus Extension",
  "version": "0.0.1",
  "description": "A Chrome extension to help you stay focused on your chosen topic",
  "author": "",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.{ts,tsx}",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@plasmohq/storage": "^1.12.0",
    "plasmo": "^0.89.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@plasmohq/prettier-plugin-sort-imports": "^4.0.1",
    "@testing-library/jest-dom": "^6.6.0",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/chrome": "^0.0.268",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.4.2",
    "ts-jest": "^29.4.6",
    "typescript": "^5.7.2"
  },
  "manifest": {
    "permissions": [
      "storage",
      "alarms"
    ],
    "host_permissions": [
      "https://www.youtube.com/*",
      "https://youtube.com/*",
      "https://www.googleapis.com/*"
    ]
  }
}
